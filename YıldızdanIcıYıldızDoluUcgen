#include <stdio.h>
#include <stdlib.h>


int main(int argc, char *argv[]) {
	int a,b,giris;
	int yildiz,bosluk;
	
	printf("kac satir ucgen olsun");
	scanf("%d",&giris);
	
	yildiz=1;
	
	bosluk=giris-1;
	
	for(a=0;a<giris;a++){
		
		for(b=0;b<bosluk;b++)
		{
			printf(" ");
		}
		for(b=0;b<yildiz;b++)
		{
		printf("*");
	}
		printf("\n");
		bosluk--;
		yildiz+=2;
	
	}
